    "reflect": {
      "type": "meta",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "meta/reflect/SKILL.md",
      "promptTriggers": {
        "keywords": [
          "reflect",
          "reflection",
          "learning",
          "learnings",
          "remember this",
          "don't forget",
          "preferences",
          "corrections",
          "what did you learn",
          "capture learning"
        ],
        "intentPatterns": [
          "(capture|save|remember|store).*?(learning|preference|correction)",
          "(reflect|analyze).*?(session|conversation)",
          "(improve|update).*?(memory|skill)",
          "what.*?(learn|remember)",
          "(enable|disable).*?reflection"
        ]
      },
      "commands": [
        "reflect",
        "reflect-on",
        "reflect-off",
        "reflect-status"
      ]
    },
