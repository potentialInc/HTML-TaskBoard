{
  "version": "1.0",
  "description": "Base skill triggers - shared across all projects using this as .claude submodule",
  "skills": {
    "reflect": {
      "type": "meta",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "meta/reflect/SKILL.md",
      "promptTriggers": {
        "keywords": [
          "reflect",
          "reflection",
          "learning",
          "learnings",
          "remember this",
          "don't forget",
          "preferences",
          "corrections",
          "what did you learn",
          "capture learning"
        ],
        "intentPatterns": [
          "(capture|save|remember|store).*?(learning|preference|correction)",
          "(reflect|analyze).*?(session|conversation)",
          "(improve|update).*?(memory|skill)",
          "what.*?(learn|remember)",
          "(enable|disable).*?reflection"
        ]
      },
      "commands": [
        "reflect",
        "reflect-on",
        "reflect-off",
        "reflect-status"
      ]
    },
    "skill-developer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "dev/skill-developer/SKILL.md",
      "promptTriggers": {
        "keywords": ["create skill", "new skill", "skill development", "skill-rules", "build skill"],
        "intentPatterns": [
          "(create|build|add|develop).*skill",
          "skill.*?(template|structure|format)"
        ]
      }
    },
    "generate-ppt": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "design/generate-ppt/SKILL.md",
      "promptTriggers": {
        "keywords": ["presentation", "ppt", "powerpoint", "slides", "reveal.js", "townhall", "deck", "generate-ppt"],
        "intentPatterns": [
          "(create|generate|build|make).*?(presentation|slides|deck|ppt)",
          "(html|reveal).*?presentation",
          "brand.*?(presentation|slides)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "presentations/**/*.html",
          "presentations/**/*.md",
          ".claude/**/reveal*.html"
        ]
      }
    },
    "notion-ticket-reviewer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "file": "dev/notion-ticket-reviewer/SKILL.md",
      "promptTriggers": {
        "keywords": ["notion ticket", "review ticket", "notion task", "ticket reviewer", "notion database", "notion review", "fix ticket"],
        "intentPatterns": [
          "(review|fix|complete|process).*?(notion|ticket)",
          "(fetch|get|list|query).*?(notion|ticket|task)",
          "notion.*?(review|update|status)",
          "fix ticket:?\\s*",
          "fix next ticket"
        ]
      },
      "commands": [
        "fix-ticket"
      ]
    },
    "project-doc-writer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "dev/project-doc-writer/SKILL.md",
      "promptTriggers": {
        "keywords": [
          "project documentation",
          "update docs",
          "generate docs",
          "PROJECT_KNOWLEDGE",
          "PROJECT_DATABASE",
          "PROJECT_API",
          "strategic plan",
          "claude-project",
          "prd to docs",
          "sync documentation",
          "documentation writer",
          "project-doc-writer"
        ],
        "intentPatterns": [
          "(generate|create|update|sync).*?(project|documentation|docs)",
          "(write|build).*?(knowledge|database|api).*?doc",
          "(from|using|based on).*?prd.*?(generate|create|update)",
          "(update|refresh).*?claude-project",
          "(sync|align).*?(docs|documentation).*?(prd|requirements)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          ".claude-project/docs/**/*.md",
          ".claude-project/plans/**/*.md",
          ".claude-project/prd/**/*"
        ]
      }
    }
  }
}
